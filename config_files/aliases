######################################
###### custom shortcut commands ######
#######################################
alias ..="cd .."
alias -- -="cd -"
alias la="ls -al"
alias c='clear'
# alias pwd="pwd && pwd | xclip -selection c"
# alias cat='bat'

#######################################
############### General / Tools #######
#######################################

alias desk="cd $HOME/Desktop"
alias down="cd $HOME/Downloads"

# aenv
alias aenv='source env/bin/activate'

# `open` command
alias open='xdg-open'

# ack for search and highlighting text
# Example usage: `cat logs.txt | ackp 'error'`
alias ackp='ack --passthru'

# docker-machine commands
function dmactivate() {
	eval $(docker-machine env $1)
}

function dmdeactivate() {
	unset `env | grep DOCKER_ | egrep -o '^[^=]+'`
}

alias v="code"
alias s="subl"

alias "v."="code ."
alias "s."="subl ."

################### exa ####################

if [ "$(command -v exa)" ]; then
    unalias -m 'll'
    # unalias -m 'l'
    # unalias -m 'la'
    unalias -m 'ls'
    alias ls='exa -G  --color auto --icons -a -s type'
    alias ll='exa -l --color always --icons -a -s type'
fi


#################### bat ######################
# TODO: install themes
# alias bat='bat -pp --theme="Nord"'

##################### portainer ##################
function _start_portainer () {
	docker volume inspect portainer_data >/dev/null || docker volume create portainer_data
	docker run --rm -d -p 8080:8000 -p 9000:9000 --name=portainer --rm -v /var/run/docker.sock:/var/run/docker.sock -v portainer_data:/data portainer/portainer-ce
}
alias start_portainer="_start_portainer"
alias stop_portainer="docker stop portainer"

