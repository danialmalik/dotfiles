############# Anaconda ####################
# Installation:: https://docs.anaconda.com/free/anaconda/install/linux/
# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
function activateConda() {
	__conda_setup="$('/home/danialmalik/anaconda3/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
	if [ $? -eq 0 ]; then
	    eval "$__conda_setup"
	else
	    if [ -f "/home/danialmalik/anaconda3/etc/profile.d/conda.sh" ]; then
	        . "/home/danialmalik/anaconda3/etc/profile.d/conda.sh"
	    else
	        export PATH="/home/danialmalik/anaconda3/bin:$PATH"
	    fi
	fi
	unset __conda_setup
}
# <<< conda initialize <<<

export PATH="$HOME/anaconda3/bin:$PATH"

